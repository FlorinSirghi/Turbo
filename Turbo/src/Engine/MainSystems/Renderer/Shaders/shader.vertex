#version 330 core

layout (location = 0) in vec3 vPos;
layout (location = 1) in vec4 vColor;
layout (location = 2) in vec2 texCoord;

uniform mat4 transformation;

out vec4 fColor;
out vec2 TexCoord;

void main()
{
	gl_Position = transformation * vec4(vPos.x, vPos.y, vPos.z, 1.0);
	fColor = vColor;
	TexCoord = texCoord;
}